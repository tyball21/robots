<html>
<head>
  <% include ./partials/head %>
</head>
<header>
  <% include ./partials/header %>
</header>
  <body>
    <h1 class='center'>All Robots</h1>
    <hr/>
    <div class='row'>
      <div class='col s12 m4'>
        <h3>Add Robots</h3>
        <form action='/robots' method='post'>
          <input type='text' name='name' placeholder='name'/>
          <button class='btn btn-waves' type='submit'>Add</button>
        </form>
      </div>
      <table class='table col m8 s12'>
        <thead>
          <th>Title</th>
          <th>x</th>
        </thead>
        <tbody>
          <% robots.forEach( function(robots) { %>
            <% var href='/robots/delete/' + robots %>
            <tr>
              <td><%= robots %></td>
              <td><a href=<%= href %> + <%= robots %></a>Delete</td>
          <% }); %>
        </tbody>
      </table>
    </body>
  </html>
